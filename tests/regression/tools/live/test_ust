TEST_DESC="Live - User space tracing"

CURDIR=$(dirname $0)/
TESTDIR=$CURDIR/../../../
NR_ITER=1
NR_USEC_WAIT=1
DELAY_USEC=2000000
TESTAPP_PATH="$TESTDIR/utils/testapp"
TESTAPP_NAME="gen-ust-events"
TESTAPP_BIN="$TESTAPP_PATH/$TESTAPP_NAME/$TESTAPP_NAME"

SESSION_NAME="live"
EVENT_NAME="tp:tptest"
RELAYD_HOST="localhost"

DIR=$(readlink -f $TESTDIR)

source $TESTDIR/utils/utils.sh

if [[ ! -z "$REMOTE_RELAYD_TEST" ]]; then
	override_base_command_ssh $REMOTE_RELAYD_HOST $REMOTE_RELAYD_USER $REMOTE_RELAYD_ID_FILE
	RELAYD_HOST="$REMOTE_RELAYD_HOST"
fi

TRACE_PATH=$($BASE_COMMAND "mktemp -d")

echo "$TEST_DESC (base command: $BASE_COMMAND)"

function setup_live_tracing()
{
	# Create session with default path
	$LTTNG create $SESSION_NAME --live $DELAY_USEC \
		-U net://$RELAYD_HOST >/dev/null 2>&1

	$LTTNG enable-event "$EVENT_NAME" -s $SESSION_NAME -u >/dev/null 2>&1
	$LTTNG start $SESSION_NAME >/dev/null 2>&1
}

function clean_live_tracing()
{
	$LTTNG stop $SESSION_NAME >/dev/null 2>&1
	$LTTNG destroy $SESSION_NAME >/dev/null 2>&1
	$BASE_COMMAND "rm -rf $TRACE_PATH"
}

file_sync_after_first=$(mktemp -u)

start_lttng_sessiond_notap

# Make sure to listen on all interfaces for the live viewer port
start_lttng_relayd_remote_support_no_tap "-o $TRACE_PATH -L net://0.0.0.0:5344"

setup_live_tracing

# Run app in background
$TESTAPP_BIN $NR_ITER $NR_USEC_WAIT ${file_sync_after_first} >/dev/null 2>&1

while [ ! -f "${file_sync_after_first}" ]; do
	sleep 0.5
done

# Start the live test
$TESTDIR/regression/tools/live/live_test "$RELAYD_HOST"

# Wait for the applications started in background
wait

clean_live_tracing

rm -f ${file_sync_after_first}

stop_lttng_sessiond_notap
stop_lttng_relayd_remote_support_notap
reestablish_base_command
