if platform.architecture()[0] == "64bit":
    DEFAULT_EXPECTED_PATHS["ustconsumerd64_health_unix_sock_path"] = {
        "type": "socket",
        "path": "{RUNDIR}/ustconsumerd64/health",
    }
else:
    DEFAULT_EXPECTED_PATHS["ustconsumerd32_healh_unix_sock_path"] = {
