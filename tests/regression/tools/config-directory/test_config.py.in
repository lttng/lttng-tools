)

tests = {
    "default": {
        "description": "LTTng with no specific environment settings",
        "environment_variables": {},
        "substitutions": DEFAULT_SUBSTITUTIONS,
        "expected_paths": DEFAULT_EXPECTED_PATHS,
    },
    "lttng_home": {
        "description": "LTTng with LTTNG_HOME set",
        "environment_variables": {
